<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.android.virtualpantry.ShoppingListActivity.ShoppingListFragment">
    <TextView
        android:id="@+id/ActiveListTitle"
        android:text="@string/ListNameFiller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"/>
    <TextView
        android:id="@+id/ActiveListVersionNo"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/VersionNumberFiller"
        />
    <TextView
        android:id="@+id/ShoppingCartModeText"
        android:text="@string/ShoppingCartMode_List"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/ShoppingCartSwitchModeButton"
        android:text="@string/ShoppingCartModeSwitchButton_ToCart"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10sp"
        android:visibility="gone"/>
    <Button
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:text="@string/CheckoutButtonText"
        android:id="@+id/CheckoutButton"
        android:layout_marginBottom="10sp"
        android:textSize="20sp"
        />
    <Button
        android:id="@+id/ActiveListBarcodeButton"
        android:text="@string/ScanBarcodeButtonText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"/>
    <ListView
        android:id="@+id/ActiveItemList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>
    <ListView
        android:id="@+id/CartList"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>