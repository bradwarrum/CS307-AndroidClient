<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.android.virtualpantry.Data.HouseholdActivity$PlaceholderFragment"
    android:orientation="vertical">

    <TextView
        android:id="@+id/Household_screen_header"
        android:text="@string/Household_title_filler"
        android:textSize="40sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0sp"
        android:focusable="true"
        android:focusableInTouchMode="true"/>
    <TextView
        android:id="@+id/Household_screen_subtitle"
        android:text="@string/Household_description_filler"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"/>
    <TextView
        android:id="@+id/Household_members_text"
        android:text="Members"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"/>
    <AutoCompleteTextView
        android:id="@+id/new_list_name_text"
        android:hint="New List Name"
        android:textSize = "25sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10sp"
        android:maxLines="1"
        android:singleLine="true"/>
    <Button
        android:id="@+id/create_new_shopping_list_button"
        android:text="@string/Household_create_new_list_button_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:layout_marginBottom="10sp"
        />
    <ListView
        android:id="@+id/listview_household"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        </ListView>
</LinearLayout>
