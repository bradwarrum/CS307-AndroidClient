<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.example.android.virtualpantry.AddItemToListActivity.AddItemToListFragment">

    <TextView
        android:text="Add an item to the list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/barcode_edit_text"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:hint="Barcode"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/scan_barcode_button"
            android:text="Scan Barcode"
            />
        </LinearLayout>
    <TextView
        android:id="@+id/item_description_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <EditText
        android:hint="Description"
        android:id="@+id/user_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/item_unit_count"
            android:hint="Number"
            android:layout_width="100sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:text="/"
            android:layout_width="10sp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/item_fraction"
            android:hint="Fraction"
            android:text="1"
            android:layout_width="100sp"
            android:layout_height="wrap_content" />
        <EditText
            android:id="@+id/item_unit_type"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:hint="Units"/>
    </LinearLayout>
    <Button
        android:id="@+id/push_item_button"
        android:text="Add Item"
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/add_item_status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
