<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.android.virtualpantry.Data.HouseholdActivity$PlaceholderFragment"
    android:orientation="vertical">

    <TextView
        android:id="@+id/HouseholdHeader"
        android:text="@string/HouseholdNameFiller"
        android:textSize="40sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0sp"
        android:focusable="true"
        android:focusableInTouchMode="true"/>
    <TextView
        android:id="@+id/HouseholdSubtitle"
        android:text="@string/HouseholdDescriptionFiller"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5sp"/>
    <TextView
        android:id="@+id/HouseholdMembers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:visibility="gone"
        />
    <Button
        android:id="@+id/GoToShoppingCartButton"
        android:text="@string/GoToShoppingCartButtonText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginBottom="10sp"/>
    <Button
        android:id="@+id/LinkItemButton"
        android:text="Add Item"
        android:textSize="20sp"
        android:layout_marginBottom="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/ViewInventoryButton"
        android:text="@string/ViewInventoryButtonText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginBottom="10sp"/>
    <Button
        android:id="@+id/CreateNewShoppingListButton"
        android:text="@string/CreateNewListButtonText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_marginBottom="20sp"
        />
    <ListView
        android:id="@+id/ListviewHousehold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>
</LinearLayout>
