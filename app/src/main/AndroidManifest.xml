<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.virtualpantry" >

    <uses-sdk android:minSdkVersion="16" />

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <android:uses-permission
        android:name="android.permission.WRITE_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <android:uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <android:uses-permission
        android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="18" />
    <android:uses-permission android:name="android.permission.READ_CALL_LOG" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.Holo.Light" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:parentActivityName=".MainActivity"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.virtualpantry.MainActivity" />
        </activity>
        <activity
            android:name=".UserHomeActivity"
            android:label="@string/title_activity_user_home" >
        </activity>
        <activity
            android:name=".HouseholdListActivity"
            android:label="@string/title_activity_household__list_"
            android:parentActivityName=".UserHomeActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.virtualpantry.UserHomeActivity" />
        </activity>
        <activity
            android:name=".CreateHouseholdActivity"
            android:label="@string/title_activity_create_household"
            android:parentActivityName=".HouseholdListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".HouseholdListActivity" />
        </activity>
        <activity
            android:name=".Data.HouseholdActivity"
            android:label="@string/title_activity_household"
            android:parentActivityName=".HouseholdListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.virtualpantry.HouseholdListActivity" />
        </activity>
        <activity
            android:name=".RegisterActivity"
            android:label="@string/title_activity_register"
            android:parentActivityName=".MainActivity"
            android:windowSoftInputMode="adjustResize|stateVisible" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.virtualpantry.MainActivity" />
        </activity>
        <activity
            android:name=".HouseholdActivity"
            android:label="@string/title_activity_household"
            android:parentActivityName=".HouseholdListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="HouseholdListActivity" />
        </activity>
        <activity
            android:name=".CreateShoppingList"
            android:label="@string/title_activity_create_shopping_list"
            android:parentActivityName=".HouseholdActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="HouseholdActivity" />
        </activity>
    </application>

</manifest>
